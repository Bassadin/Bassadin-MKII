{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:best-practices"],
    "packageRules": [
        {
            "matchDepTypes": ["devDependencies"],
            "matchUpdateTypes": ["minor"],
            "automerge": true
        },
        {
            "matchUpdateTypes": ["patch", "pin", "digest"],
            "automerge": true
        }
    ]
}
