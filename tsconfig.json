{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "lib": ["esnext", "dom"],
        "types": ["vite/client", "cypress"],
        "resolveJsonModule": true,
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules", "dist", "public"]
}
