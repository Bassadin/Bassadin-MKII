---
import "../styles/index.scss";

interface Props {
    title?: string;
}

const { title = "Bassadin" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Bastian Hodapp - Software Developer" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <title>{title}</title>
    </head>
    <body
        class="grid min-h-screen grid-cols-1 grid-rows-[auto_1fr_auto] bg-stone-100 font-sans text-stone-800 dark:bg-stone-800 dark:text-stone-200"
    >
        <slot />
    </body>
</html>
